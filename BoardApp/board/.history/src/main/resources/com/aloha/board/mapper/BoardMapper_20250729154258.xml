<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace="매퍼 인터페이스 경로" --> 
<mapper namespace="com.aloha.board.mapper.BoardMapper">

    <select id="list" resultType="Boards">
        SELECT *
        FROM todos
    </select>

    <!-- ⚡ 페이징 처리 후 정렬을 적용 -->
    <!-- 이유 : 정렬 후 페이징 하면, 완료 안 된 것만 앞으로 나오니까 
                페이징 후 정렬을 적용합니다.            
    -->

    <select id="select" resultType="Boards">
        SELECT *
        FROM boards
        WHERE no = #{no}
    </select>

    <select id="selectById" resultType="Boards">
        SELECT *
        FROM boards
        WHERE id = #{id}
    </select>

    <insert id="insert">
        INSERT INTO boards ( title, writer, content )
        VALUES ( #{title}, #{writer}, #{content} )
    </insert>

    <update id="update" parameterType="Boards">
    UPDATE boards
    <set>
        <if test="title != null">title = #{title},</if>
        <if test="writer != null">writer = #{writer},</if>
        <if test="text != null">text = #{text},</if>
        <if test="id != null">id = #{id},</if>
        updated_at = now()
    </set>
    WHERE no = #{no}
    </update>

    <update id="updateById" parameterType="com.aloha.board.domain.Boards">
    UPDATE boards
    <set>
        <if test="title != null">title = #{title},</if>
        <if test="writer != null">writer = #{writer},</if>
        <if test="text != null">text = #{text},</if>
        <if test="no != null">no = #{no},</if>
        updated_at = now()
    </set>
    WHERE id = #{id}
</update>


    <delete id="delete">
        DELETE FROM boards
        WHERE no = #{no}
    </delete>
    <delete id="deleteById">
        DELETE FROM boards
        WHERE id = #{id}
    </delete>

    <!-- 전체 완료 -->
    <update id="completeAll">
        UPDATE boards
            SET status = true
    </update>

    <!-- 전체 삭제 -->
    <delete id="deleteAll">
        DELETE FROM boards
    </delete>
    
</mapper>